<p style="color: green"><%= notice %></p>

  <div class="flex flex-col w-full">
    <h1 class="block text-2xl text-gray-900 font-medium">
      <span>Cities</span>
    </h1>

    <%= render "cities/index/cities_count", count: @cities.count %>

    <div class="mt-4" id="cities_list">
      <% @cities.each do |city| %>
        <div class="flex justify-between border-b p-2 items-center">

          <%= render city %>
          <p>
            <%= link_to "Show", city, class: 'rounded bg-white py-1 px-2 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
          </p>
        </div>
      <% end %>
    </div>

    <%= render "cities/index/plus_btn" %>

  </div>
