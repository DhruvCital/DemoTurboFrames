
  <div class="flex flex-col w-full">
    <h1 class="block text-2xl text-gray-900 font-medium">
      <span>States</span>
    </h1>

    <%= render "states/index/count", count: @states.count %>

    <div class="mt-4" id="states_list">
      <% @states.each do |state| %>
        <div class="flex justify-between border-b p-2 items-center">

          <%= render state %>
          <p>
            <%= link_to "Show", state, class: 'rounded bg-white py-1 px-2 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
          </p>
        </div>
      <% end %>
    </div>

    <%= render "states/index/plus_btn" %>
  </div>
