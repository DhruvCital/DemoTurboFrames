              <span class="pointer-events-none">States</span>
              <%
                # Processing by StatesController#index as HTML
                # Rendering layout /Users/dhruv/.rbenv/versions/3.1.2/lib/ruby/gems/3.1.0/gems/turbo-rails-1.4.0/app/views/layouts/turbo_rails/frame.html.erb
                # Rendering states/index.html.erb within layouts/turbo_rails/frame
              %>
            <% end %>
          </div>
        <% #end %>
      </div>    
    </main>
  </body>
